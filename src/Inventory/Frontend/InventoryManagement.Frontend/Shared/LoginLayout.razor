@using Microsoft.AspNetCore.Authorization;

@attribute [AllowAnonymous]
@inherits LayoutComponentBase


<RadzenNotification />


<RadzenBody>
    <ChildContent>
        <RadzenImage Path="@backgroundImagePath" style="bottom: 0; height: 100%; left: 0; position: absolute; right: 0; top: 0; width: 100%">
        </RadzenImage>
        <div class="row justify-content-center align-items-center" style="bottom: 0; left: 0; margin-left: 0; margin-right: 0; position: absolute; right: 0; top: 0">
            <div class="col-xl-3 col-lg-4 col-md-5 col-sm-8" style="padding-left: 0; padding-right: 0">
                <RadzenCard style="margin-top: 0" class="rz-background-color-base-100">
                    <ChildContent>
                        <RadzenImage Path="assets/images/logo.svg" style="border-radius: 64px; display: block; height: 45px; margin-left: auto; margin-right: auto; margin-top: 0; width: -webkit-fill-available">
                        </RadzenImage>
                        <RadzenContentContainer Name="main">
                            @Body
                        </RadzenContentContainer>
                    </ChildContent>
                </RadzenCard>
            </div>
        </div>
    </ChildContent>
</RadzenBody>


@code {
    private string backgroundImagePath;

    private readonly string[] backgroundImages =
    {
        "login-background1.jpg",
        "login-background2.jpg",
        "login-background3.jpg",
        "login-background4.jpg"
    };
    private Random random = new Random();
    protected override void OnInitialized()
    {
        // Rastgele bir arka plan resmi seçme
        int randomIndex = random.Next(0, backgroundImages.Length);
        backgroundImagePath = "assets/images/" + backgroundImages[randomIndex];
    }
}
