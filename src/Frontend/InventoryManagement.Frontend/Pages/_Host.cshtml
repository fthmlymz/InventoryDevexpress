                    document.location.reload();
                }
            }
        });
    </script>

    <!-- Autostart function -->
    
    <!-- FileDownload JavaScript function -->
    <script>
        function downloadFileFromBytes(filename, byteData) {
            var blob = new Blob([new Uint8Array(byteData)], { type: 'application/octet-stream' });
            var url = window.URL.createObjectURL(blob);
            var a = document.createElement('a');
            a.href = url;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            window.URL.revokeObjectURL(url);
            document.body.removeChild(a);
        }
    </script>
    <!-- FileDownload JavaScript function -->
